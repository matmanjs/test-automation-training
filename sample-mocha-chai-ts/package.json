{
  "name": "sample-mocha-chai-ts",
  "version": "1.0.0",
  "description": "A sample with mocha chai and ts",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc -d",
    "test": "npm run lint && npm run test:unit && npm run test:cover",
    "test:unit": "npx mocha 'test/**/*.{ts,tsx}'",
    "test:cover": "npx nyc npm run test:unit",
    "lint": "npx eslint src test --ext .ts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/types": "^7.10.2",
    "@types/chai": "^4.2.11",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.1.0",
    "mocha": "^7.2.0",
    "mochawesome": "^6.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  }
}
